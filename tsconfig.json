{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "lib": [
            "dom",
            "es5",
            "scripthost",
            "es2015.promise"
        ],
        "sourceMap": true,
        "noImplicitAny": false,
        "preserveConstEnums": false,
        "declaration": false,
        "emitDecoratorMetadata": false,
        "experimentalDecorators": true,
        "suppressImplicitAnyIndexErrors": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "removeComments": true,
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": [
        "./src/*",
        "./src/**/*",
        "./types"
    ]
}
